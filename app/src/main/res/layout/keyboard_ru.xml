<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboard"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="@color/gray_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/letterI_short"
            style="@style/key"
            android:text="Й" />

        <TextView
            android:id="@+id/letterC"
            style="@style/key"
            android:text="Ц" />
        <TextView
            android:id="@+id/letterU"
            style="@style/key"
            android:text="У" />
        <TextView
            android:id="@+id/letterK"
            style="@style/key"
            android:text="К" />
        <TextView
            android:id="@+id/letterE"
            style="@style/key"
            android:text="Е" />
        <TextView
            android:id="@+id/letterN"
            style="@style/key"
            android:text="Н" />
        <TextView
            android:id="@+id/letterG"
            style="@style/key"
            android:text="Г" />
        <TextView
            android:id="@+id/letterSH"
            style="@style/key"
            android:text="Ш" />
        <TextView
            android:id="@+id/letterSCH"
            style="@style/key"
            android:text="Щ" />

        <TextView
            android:id="@+id/letterZ"
            style="@style/key"
            android:text="З" />
        <TextView
            android:id="@+id/letterH"
            style="@style/key"
            android:text="Х" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/letterPH"
            style="@style/key"
            android:text="Ф" />
        <TextView
            android:id="@+id/letter_not"
            style="@style/key"
            android:text="Ы" />
        <TextView
            android:id="@+id/letterV"
            style="@style/key"
            android:text="В" />
        <TextView
            android:id="@+id/letterA"
            style="@style/key"
            android:text="А" />
        <TextView
            android:id="@+id/letterP"
            style="@style/key"
            android:text="П" />
        <TextView
            android:id="@+id/letterR"
            style="@style/key"
            android:text="Р" />
        <TextView
            android:id="@+id/letterO"
            style="@style/key"
            android:text="О" />
        <TextView
            android:id="@+id/letterL"
            style="@style/key"
            android:text="Л" />
        <TextView
            android:id="@+id/letterD"
            style="@style/key"
            android:text="Д" />
        <TextView
            android:id="@+id/letterGZ"
            style="@style/key"
            android:text="Ж" />
        <TextView
            android:id="@+id/letterAE"
            style="@style/key"
            android:text="Э" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/letterYA"
            style="@style/key"
            android:text="Я" />
        <TextView
            android:id="@+id/letterCH"
            style="@style/key"
            android:text="Ч" />
        <TextView
            android:id="@+id/letterS"
            style="@style/key"
            android:text="С" />
        <TextView
            android:id="@+id/letterM"
            style="@style/key"
            android:text="М" />
        <TextView
            android:id="@+id/letterI"
            style="@style/key"
            android:text="И" />
        <TextView
            android:id="@+id/letterT"
            style="@style/key"
            android:text="Т" />
        <TextView
            android:id="@+id/letter_gentle_sign"
            style="@style/key"
            android:text="Ь" />
        <TextView
            android:id="@+id/letter_strong"
            style="@style/key"
            android:text="Ъ" />
        <TextView
            android:id="@+id/letterBlyat"
            style="@style/key"
            android:text="Б" />
        <TextView
            android:id="@+id/letterYU"
            style="@style/key"
            android:text="Ю" />
        <TextView
            android:id="@+id/letterYO"
            style="@style/key"
            android:text="Ё" />
    </LinearLayout>

</LinearLayout>