<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboard"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="@color/gray_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/letterI_short"
            style="@style/key"
            android:text="Q" />

        <TextView
            android:id="@+id/letterC"
            style="@style/key"
            android:text="W" />
        <TextView
            android:id="@+id/letterU"
            style="@style/key"
            android:text="E" />
        <TextView
            android:id="@+id/letterK"
            style="@style/key"
            android:text="R" />
        <TextView
            android:id="@+id/letterE"
            style="@style/key"
            android:text="T" />
        <TextView
            android:id="@+id/letterN"
            style="@style/key"
            android:text="Y" />
        <TextView
            android:id="@+id/letterG"
            style="@style/key"
            android:text="U" />
        <TextView
            android:id="@+id/letterSH"
            style="@style/key"
            android:text="I" />
        <TextView
            android:id="@+id/letterSCH"
            style="@style/key"
            android:text="O" />

        <TextView
            android:id="@+id/letterZ"
            style="@style/key"
            android:text="P" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/letterPH"
            style="@style/key"
            android:text="A" />
        <TextView
            android:id="@+id/letter_not"
            style="@style/key"
            android:text="S" />
        <TextView
            android:id="@+id/letterV"
            style="@style/key"
            android:text="D" />
        <TextView
            android:id="@+id/letterA"
            style="@style/key"
            android:text="F" />
        <TextView
            android:id="@+id/letterP"
            style="@style/key"
            android:text="G" />
        <TextView
            android:id="@+id/letterR"
            style="@style/key"
            android:text="H" />
        <TextView
            android:id="@+id/letterO"
            style="@style/key"
            android:text="J" />
        <TextView
            android:id="@+id/letterL"
            style="@style/key"
            android:text="K" />
        <TextView
            android:id="@+id/letterD"
            style="@style/key"
            android:text="L" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/letterYA"
            style="@style/key"
            android:text="Z" />
        <TextView
            android:id="@+id/letterCH"
            style="@style/key"
            android:text="X" />
        <TextView
            android:id="@+id/letterS"
            style="@style/key"
            android:text="C" />
        <TextView
            android:id="@+id/letterM"
            style="@style/key"
            android:text="V" />
        <TextView
            android:id="@+id/letterI"
            style="@style/key"
            android:text="B" />
        <TextView
            android:id="@+id/letterT"
            style="@style/key"
            android:text="N" />
        <TextView
            android:id="@+id/letter_gentle_sign"
            style="@style/key"
            android:text="M" />
    </LinearLayout>

</LinearLayout>